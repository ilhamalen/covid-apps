<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.daws.projects.codamation.helpers.TextHelper"/>
        <variable
            name="lastUpdate"
            type="String" />
        <variable
            name="infoAdapter"
            type="com.daws.projects.codamation.adapters.SimpleRecyclerAdapter" />
        <variable
            name="newsAdapter"
            type="com.daws.projects.codamation.adapters.SimpleRecyclerAdapter" />
        <variable
            name="mediaAdapter"
            type="com.daws.projects.codamation.adapters.SimpleRecyclerAdapter" />
        <variable
            name="indonesiaModel"
            type="com.daws.projects.codamation.models.SummaryGlobalCaseModel" />
        <variable
            name="globalModel"
            type="com.daws.projects.codamation.models.SummaryGlobalCaseModel" />
    </data>

    <com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_20sdp"
        android:background="@color/defaultBackground"
        app:srl_direction="top">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_15sdp">

                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        app:srcCompat="@drawable/app_icon_green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/nunitosans_bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_20ssp"
                        android:text="@string/app_name"
                        tools:text="Codamation"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/infoRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adapter="@{infoAdapter}"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:clipToPadding="false"
                    app:setupHorizontalZoomRecyclerView="@{@dimen/_5sdp}"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:listitem="@layout/item_info"/>

                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/nunitosans_bold"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/title_see_all_info"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunitosans_bold"
                                android:text="@string/title_indonesia"
                                android:textSize="@dimen/_12ssp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_8ssp"
                                android:textColor="@color/textGrey"
                                android:text="@{@string/tag_last_update(lastUpdate)}"
                                tools:text="Terakhir diupdate 24 Maret"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/localDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_25sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunitosans_bold"
                                android:text="@string/title_see_detail"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_8ssp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_arrow_right"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/roundrect_all_fill_white_outline_white"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:padding="@dimen/_10sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_case_positive"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textSize="@dimen/_16ssp"
                                android:text="@{TextHelper.newInstance().separatorValue(indonesiaModel.confirmed)}"
                                android:fontFamily="@font/nunitosans_bold"
                                android:textColor="@color/pending"
                                tools:text="999,999"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Positif"
                                android:textColor="@color/textGrey"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_case_recover"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textSize="@dimen/_16ssp"
                                android:text="@{TextHelper.newInstance().separatorValue(indonesiaModel.recovered)}"
                                android:fontFamily="@font/nunitosans_bold"
                                android:textColor="@color/colorPrimary"
                                tools:text="999,999"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sembuh"
                                android:textColor="@color/textGrey"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_case_death"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textSize="@dimen/_16ssp"
                                android:text="@{TextHelper.newInstance().separatorValue(indonesiaModel.death)}"
                                android:fontFamily="@font/nunitosans_bold"
                                android:textColor="@color/error"
                                tools:text="999,999"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meninggal"
                                android:textColor="@color/textGrey"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunitosans_bold"
                                android:text="@string/title_worldwide"
                                android:textSize="@dimen/_12ssp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_8ssp"
                                android:textColor="@color/textGrey"
                                android:text="@{@string/tag_last_update(lastUpdate)}"
                                tools:text="Terakhir diupdate 24 Maret"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/globalDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_25sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunitosans_bold"
                                android:text="@string/title_see_detail"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_8ssp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_arrow_right"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/roundrect_all_fill_white_outline_white"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:padding="@dimen/_10sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_case_positive"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textSize="@dimen/_16ssp"
                                android:text="@{TextHelper.newInstance().separatorValue(globalModel.confirmed)}"
                                android:fontFamily="@font/nunitosans_bold"
                                android:textColor="@color/pending"
                                tools:text="999,999"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Positif"
                                android:textColor="@color/textGrey"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_case_recover"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textSize="@dimen/_16ssp"
                                android:text="@{TextHelper.newInstance().separatorValue(globalModel.recovered)}"
                                android:fontFamily="@font/nunitosans_bold"
                                android:textColor="@color/colorPrimary"
                                tools:text="999,999"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sembuh"
                                android:textColor="@color/textGrey"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_case_death"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textSize="@dimen/_16ssp"
                                android:text="@{TextHelper.newInstance().separatorValue(globalModel.death)}"
                                android:fontFamily="@font/nunitosans_bold"
                                android:textColor="@color/error"
                                tools:text="999,999"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meninggal"
                                android:textColor="@color/textGrey"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_4sdp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunitosans_bold"
                            android:text="@string/title_news"
                            android:textSize="@dimen/_12ssp" />
                        <TextView
                            android:id="@+id/newsMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_25sdp"
                            android:fontFamily="@font/nunitosans_bold"
                            android:text="Lainnya"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_8ssp"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adapter="@{newsAdapter}"
                        app:setupVerticalRecyclerView="@{@dimen/_5sdp}"
                        tools:listitem="@layout/item_news"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:fontFamily="@font/nunitosans_bold"
                    android:text="@string/title_media"
                    android:textSize="@dimen/_12ssp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:clipToPadding="false"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:adapter="@{mediaAdapter}"
                    app:setupHorizontalRecyclerView="@{@dimen/_10sdp}"
                    tools:listitem="@layout/item_media"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout>
</layout>