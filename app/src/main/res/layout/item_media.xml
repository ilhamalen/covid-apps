<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="media"
            type="com.daws.projects.codamation.models.MediaModel" />
    </data>
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/roundrect_all_fill_white_outline_white">
        <com.daws.projects.codamation.utils.components.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            tools:src="@drawable/snip5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:padding="@dimen/_10sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_play_button"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_youtube_logo"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/roundrect_bottom_fill_white_outline_white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/nunitosans_bold"
                android:text="@{media.title}"
                android:textSize="@dimen/_10ssp"
                tools:text="COVID-19 (Coronavirus Disease 19) - February Update - causes, symptoms, diagnosis, pathologyFebruary Update - causes, symptoms, diagnosis, pathologyFebruary Update - causes, symptoms, diagnosis, pathology"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8ssp"
                android:text="@{media.publishedDate}"
                tools:text="12:00, 12 Mar 2020"/>
        </LinearLayout>
    </RelativeLayout>
</layout>